<Window x:Class="Semaforo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Semaforo"
        mc:Ignorable="d" ResizeMode="NoResize"
        Title="Semaforo" Height="380" Width="180">
    <Grid>
        <Ellipse x:Name="elRed" Fill="Red" HorizontalAlignment="Left" Height="80" Margin="40,31,0,0" Stroke="Black" VerticalAlignment="Top" Width="80"/>
        <Ellipse Name="elYellow" Fill="Yellow" HorizontalAlignment="Left" Height="80" Margin="40,130,0,0" Stroke="Black" VerticalAlignment="Top" Width="80"/>
        <Ellipse x:Name="elGreen" Fill="Green" HorizontalAlignment="Left" Height="80" Margin="40,235,0,0" Stroke="Black" VerticalAlignment="Top" Width="80"/>
        <Rectangle HorizontalAlignment="Left" Height="320" Margin="10,10,0,0" Stroke="Black" VerticalAlignment="Top" Width="140"/>

    </Grid>
</Window>
