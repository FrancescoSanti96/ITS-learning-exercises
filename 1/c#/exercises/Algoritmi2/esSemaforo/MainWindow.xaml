<Window x:Class="esSemaforo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:esSemaforo"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Rectangle HorizontalAlignment="Center" Height="245" Margin="0,85,0,0" Stroke="Black" VerticalAlignment="Top" Width="142">
            <Rectangle.Fill>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black" Offset="0.261"/>
                    <GradientStop Color="White" Offset="1"/>
                </LinearGradientBrush>
            </Rectangle.Fill>
        </Rectangle>
        <Ellipse HorizontalAlignment="Left" Height="55" Margin="369,101,0,0" Stroke="#FF151712" VerticalAlignment="Top" Width="53" Fill="#FF74A43A"/>
        <Ellipse HorizontalAlignment="Left" Height="55" Margin="369,180,0,0" VerticalAlignment="Top" Width="53" Fill="#FFFFF40D" Stroke="Black"/>
        <Ellipse HorizontalAlignment="Left" Height="55" Margin="369,263,0,0" Stroke="#FF191818" VerticalAlignment="Top" Width="53" Fill="#FFFD2626"/>

    </Grid>
</Window>
